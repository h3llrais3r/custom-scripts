<keymap>
    <global>
        <keyboard>
            <!-- keyboard - subtitle shift -->
            <left mod="ctrl">SubtitleDelayMinus</left>
            <right mod="ctrl">SubtitleDelayPlus</right>
            <!-- keyboard - audio shift -->
            <left mod="ctrl,shift">AudioDelayMinus</left>
            <right mod="ctrl,shift">AudioDelayPlus</right>
			<!-- remote control - menu button -->
            <pipe mod="ctrl,alt">ContextMenu</pipe>
            <!-- remote control - info button -->
			<hash mod="ctrl,alt">Info</hash>
			<!-- remote control - guide button -->
            <at mod="ctrl,alt">ActivateWindow(Home)</at>
        </keyboard>
    </global>
</keymap>