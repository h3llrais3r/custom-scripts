<passwords>
    <!-- All shares are currently readonly, as we only use kodi as player, not to modify anything -->
    <!-- In case we need special permission for a specific smb path, we can assign it to the KODI user and enable it here -->
    <!-- Chromecast needs write access to /Chromecast share for path substitution for thumbnails -->
	<path>
        <from pathversion="1">smb://192.168.0.100/Chromecast/</from>
        <to pathversion="1">smb://KODI:KODI@192.168.0.100/Chromecast/</to>
    </path>
</passwords>